<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/playlist_item_thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="252dp"
            android:minWidth="366dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/playlist_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playlist_item_thumbnail"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/playlist_item_display_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playlist_item_title"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/playlist_item_channe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playlist_item_title"
            android:layout_toRightOf="@+id/playlist_item_display_icon"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/playlist_item_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playlist_item_channe_name"
            android:layout_toRightOf="@+id/playlist_item_display_icon"
            android:textSize="16sp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>